
@model PlaceServiceModel

<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageUrl" alt="Place Image">
        <div class="card-body text-center">
            <h4>@Model.Name</h4>
            <h6>Address: <b>@Model.Description</b></h6>
            <br />
           @* <a asp-area="" asp-controller="Place" asp-action="Details" asp-route-id="@Model.Id"
              asp-route-information="@Model.GetInformation()" class="btn btn-success">Details</a>*@
            @if (this.User.Identity.IsAuthenticated)
            {
                <a asp-area="" asp-controller="Place" asp-action="Edit" asp-route-id="@Model.Id"
               class="btn btn-warning">Edit</a>
                <a asp-area="" asp-controller="Place" asp-action="Delete" asp-route-id="@Model.Id"
               class="btn btn-danger">Delete</a>
                <p></p>
                
            }
        </div>
    </div>
</div>

